<!-- res/layout/text_node.xml -->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_text_node"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">


    <!-- User Icon and Name Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <!-- User Icon -->
        <ImageView
            android:id="@+id/user_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/user_alt_1_svgrepo_com"
            android:contentDescription="User Icon" />

        <!-- User Name -->
        <TextView
            android:id="@+id/author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Doe"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginStart="10dp"/>

        <!-- Date of the Message -->
        <TextView
            android:id="@+id/message_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jan 01, 2023"
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- User Audio Row -->
    <!-- User Text Row -->
    <TextView
        android:id="@+id/text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is the user's text."
        android:textSize="14sp"
        android:textColor="#333333"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="14dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <!-- Play-Pause Button -->

        <!-- Audio Duration -->

        <ImageButton
            android:id="@+id/playPauseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:src="@drawable/play_button_svgrepo_com"
            android:paddingEnd="12dp"
            />
        <!-- Progress Bar -->
        <SeekBar
            android:id="@+id/progressBar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:max="100"
            android:progress="0"
            android:progressBackgroundTint="#CCCCCC"
            android:progressTint="#2196F3"
            android:thumb="@android:color/darker_gray"
            android:paddingEnd="12dp"
            />

        <TextView
            android:id="@+id/audioDurationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="00:00"
            android:textColor="#888888"
            android:textSize="16sp" />

    </LinearLayout>


</LinearLayout>